        "buttonPrev": {
          "id": "buttonPrev",
          "name": "buttonPrev",
          "label": "Ir atrás",
          "type": "button",
          "nextStep": "menu",
          "outlined": true,
          "order": 2
        },
        "buttonNext": {
          "id": "buttonNext",
          "name": "buttonNext",
          "label": "Continuar",
          "type": "submit",
          "nextStep": "end",
