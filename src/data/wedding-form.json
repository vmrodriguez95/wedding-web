          "order": 0
        },
        "sizeCompanion": {
          "id": "sizeCompanion",
          "name": "sizeCompanion",
          "label": "Y tu acompañante, ¿Que talla usa?",
          "type": "select",
          "options": [
            {
              "label": "XS",
              "value": "XS"
            },
            {
              "label": "S",
              "value": "S"
            },
            {
              "label": "M",
              "value": "M",
              "default": true
            },
            {
              "label": "L",
              "value": "L"
            },
            {
              "label": "XL",
              "value": "XL"
